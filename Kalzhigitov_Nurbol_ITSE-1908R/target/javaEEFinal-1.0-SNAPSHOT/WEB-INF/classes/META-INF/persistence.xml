<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="test" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
            <class>JavaEEFinal.Entities.Role</class>
            <class>JavaEEFinal.Entities.User</class>
            <class>JavaEEFinal.Entities.Building</class>
            <class>JavaEEFinal.Entities.BuildingsCategory</class>
            <class>JavaEEFinal.Entities.Servicepoint</class>
            <class>JavaEEFinal.Entities.Servicepointstatus</class>
            <class>JavaEEFinal.Entities.Category</class>
        <class>JavaEEFinal.Entities.Userdetail</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/javaEEFinal" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="123" />
        </properties>
    </persistence-unit>
</persistence>